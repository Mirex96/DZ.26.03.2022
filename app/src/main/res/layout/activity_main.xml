<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dz26032022.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/saveProductName"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_basket"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/onAdd"
        app:layout_constraintLeft_toLeftOf="@+id/onAdd"
        app:layout_constraintRight_toRightOf="@+id/onAdd" />

    <ImageView
        android:id="@+id/onAdd"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>