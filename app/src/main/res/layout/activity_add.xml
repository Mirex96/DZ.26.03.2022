<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dz26032022.AddActivity">
    <EditText
        android:id="@+id/nameEditTextAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter name:"
        android:lines="1"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="90dp"/>

    <EditText
        android:id="@+id/priceEditTextAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter price:"
        android:lines="1"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/nameEditTextAdd"
        app:layout_constraintRight_toRightOf="@+id/nameEditTextAdd"
        app:layout_constraintTop_toBottomOf="@+id/nameEditTextAdd" />

    <EditText
        android:id="@+id/quantityEditTextAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter quantity:"
        android:maxLines="1"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/priceEditTextAdd"
        app:layout_constraintRight_toRightOf="@id/priceEditTextAdd"
        app:layout_constraintTop_toBottomOf="@+id/priceEditTextAdd" />

    <EditText
        android:id="@+id/qualityEditTextAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter quality:"
        android:lines="1"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/quantityEditTextAdd"
        app:layout_constraintRight_toRightOf="@id/quantityEditTextAdd"
        app:layout_constraintTop_toBottomOf="@+id/quantityEditTextAdd" />

    <ImageView
        android:id="@+id/imageAdd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@+id/nameEditTextAdd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_product_edit"
        />

    <Button
        android:id="@+id/buttonSaveAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="save"
        app:layout_constraintLeft_toLeftOf="@+id/qualityEditTextAdd"
        app:layout_constraintRight_toRightOf="@+id/qualityEditTextAdd"
        app:layout_constraintTop_toBottomOf="@+id/qualityEditTextAdd" />
</androidx.constraintlayout.widget.ConstraintLayout>